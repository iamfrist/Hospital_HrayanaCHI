<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ProgressBar
              android:id="@+id/progressBar"
              style="?android:attr/progressBarStyle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:visibility="gone"
              android:layout_gravity="center"/>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".NewPaitentRegActivity">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_margin="10dp"
                  android:text="New Patient registration"
                  android:textColor="#000"
                  android:textSize="25sp" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:layout_marginTop="20dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#176200EE"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="First Name :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/name"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="firstname" />


              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Last Name :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/lastname"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="lastname" />

              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#176200EE"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Mobile No:"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/mobileno"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:maxLength="10"
                      android:hint="mobile no"
                      android:inputType="number" />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Age :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/age"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="Age"
                      android:inputType="number" />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#176200EE"
                  android:orientation="horizontal"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Gender :"
                      android:textStyle="bold" />

                  <RadioGroup
                      android:id="@+id/yourRadioGroup"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1.5"
                      android:orientation="horizontal">

                      <RadioButton
                          android:id="@+id/male"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"
                          android:layout_weight="1"
                          android:text="Male" />

                      <RadioButton
                          android:id="@+id/female"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_weight="1"
                          android:text="Female" />

                  </RadioGroup>


              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Covid Status :"
                      android:textStyle="bold" />

                  <RadioGroup
                      android:id="@+id/covidRadioGroup"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1.5"
                      android:orientation="horizontal">

                      <RadioButton
                          android:id="@+id/positive"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"
                          android:layout_weight="1"
                          android:text="Positive" />

                      <RadioButton
                          android:id="@+id/negative"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_weight="1"
                          android:text="Negative" />

                  </RadioGroup>


              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#176200EE"
                  android:orientation="horizontal"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.6"
                      android:gravity="left"
                      android:text="Comorbidities :"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/comotxt"
                      android:layout_width="0dp"
                      android:layout_weight="1.3"
                      android:hint="Select Comorbidities"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left"/>


              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Password :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/password1"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="password"
                      android:inputType="textPassword" />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />

          <!--    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#176200EE"
                  android:orientation="horizontal"
                  android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Re password :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/password2"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="re enter password"
                      android:inputType="number" />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:background="#176200EE">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="Address :"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/address"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.4"
                      android:gravity="left"
                      android:hint="address"
                      />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
               >

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="chc_id :"
                      android:textStyle="bold" />


                  <Spinner
                      android:id="@+id/chcspinner"
                      android:layout_width="0dp"
                      android:layout_weight="1.4"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"></Spinner>
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:background="#176200EE"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="0.5"
                      android:gravity="left"
                      android:text="phc_id :"
                      android:textStyle="bold" />

                  <!-- <EditText
                       android:id="@+id/phc_id"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:gravity="left"
                       android:hint="phc_id"
                       android:inputType="number" />-->
                  <Spinner
                      android:id="@+id/phpspinner"
                      android:layout_width="0dp"
                      android:layout_weight="1.4"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"></Spinner>
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:background="@color/colorPrimary" />
              <Button
                  android:id="@+id/regsubBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginTop="10dp"
                  android:text="Submit" />

          </LinearLayout>
      </FrameLayout>

    </ScrollView>

</layout>